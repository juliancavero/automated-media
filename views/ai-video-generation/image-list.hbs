<html lang='en'>

<head>
  {{> head}}
  <style>
    .image-grid {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      gap: 20px;
      margin-top: 20px;
    }

    /* Tablet */
    @media (min-width: 768px) {
      .image-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    /* Desktop - exactly 3 columns */
    @media (min-width: 992px) {
      .image-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .image-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.3s ease;
      background-color: white;
    }

    .image-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      cursor: pointer;
    }

    .image-container {
      height: 200px;
      overflow: hidden;
      position: relative;
    }

    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .image-info {
      padding: 15px;
    }

    .image-description {
      font-size: 0.9em;
      color: #666;
      margin-top: 5px;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }

    .empty-message {
      text-align: center;
      padding: 30px;
      color: #666;
      font-style: italic;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .relaunch-button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .relaunch-button:hover {
      background-color: #0056b3;
    }

    .notification {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 15px;
      border-radius: 5px;
      color: white;
      z-index: 1000;
      transition: opacity 0.5s;
      display: none;
    }

    .success {
      background-color: #28a745;
    }

    .error {
      background-color: #dc3545;
    }

    /* Pagination styles */
    .pagination-container {
      display: flex;
      justify-content: center;
      margin: 30px 0;
      align-items: center;
    }

    .pagination {
      display: flex;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .pagination li {
      margin: 0 5px;
    }

    .pagination a {
      display: block;
      padding: 8px 12px;
      border: 1px solid #ddd;
      border-radius: 4px;
      color: #007bff;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .pagination a:hover {
      background-color: #f8f9fa;
    }

    .pagination .active a {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }

    .pagination .disabled a {
      color: #6c757d;
      pointer-events: none;
      cursor: not-allowed;
      background-color: #fff;
      border-color: #dee2e6;
    }

    .pagination-info {
      margin-bottom: 10px;
      text-align: center;
      color: #6c757d;
      font-size: 0.9em;
    }
  </style>
</head>

<body>
  <div class='container'>
    {{> navmenu}}

    <div class="header-container">
      <h1>Generated Images</h1>
      <button id="relaunchImagesBtn" class="relaunch-button">Relaunch Failed Tasks</button>
    </div>

    <div id="notification" class="notification"></div>

    {{#if images.length}}
    <div class="pagination-info">
      Showing page {{pagination.currentPage}} of {{pagination.totalPages}} ({{pagination.totalItems}} total images)
    </div>

    <div class='image-grid'>
      {{#each images}}
      <div class='image-card' data-image-id='{{_id}}'>
        <div class='image-container'>
          <img src='{{#if url}}{{url}}{{else}}/images/{{_id}}{{/if}}' alt='{{text}}'>
        </div>
        <div class='image-info'>
          <h4>Image #{{add @index 1}}</h4>
          <div class='image-description'>{{truncate text 100}}</div>
        </div>
      </div>
      {{/each}}
    </div>

    <div class="pagination-container">
      <ul class="pagination">
        <li class="{{#unless pagination.hasPrev}}disabled{{/unless}}">
          <a href="?page=1">First</a>
        </li>
        <li class="{{#unless pagination.hasPrev}}disabled{{/unless}}">
          <a href="?page={{pagination.prevPage}}">Previous</a>
        </li>

        {{#each (generatePageNumbers pagination.currentPage pagination.totalPages)}}
        <li class="{{#if (eq this ../pagination.currentPage)}}active{{/if}}">
          <a href="?page={{this}}">{{this}}</a>
        </li>
        {{/each}}

        <li class="{{#unless pagination.hasNext}}disabled{{/unless}}">
          <a href="?page={{pagination.nextPage}}">Next</a>
        </li>
        <li class="{{#unless pagination.hasNext}}disabled{{/unless}}">
          <a href="?page={{pagination.totalPages}}">Last</a>
        </li>
      </ul>
    </div>
    {{else}}
    <div class='empty-message'>
      <p>No images found.</p>
    </div>
    {{/if}}
  </div>

  <script>
    document.querySelectorAll('.image-card').forEach(card => {
      card.addEventListener('click', function () {
        const imageId = this.getAttribute('data-image-id');
        window.location.href = '/images/list/' + imageId;
      });
    });

    document.getElementById('relaunchImagesBtn').addEventListener('click', async function () {
      try {
        const response = await fetch('/images/relaunch-failed', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const result = await response.json();
        const notification = document.getElementById('notification');

        notification.textContent = result.message;
        notification.className = `notification ${result.success ? 'success' : 'error'}`;
        notification.style.display = 'block';

        setTimeout(() => {
          notification.style.opacity = '0';
          setTimeout(() => {
            notification.style.display = 'none';
            notification.style.opacity = '1';
          }, 500);
        }, 3000);
      } catch (error) {
        console.error('Error:', error);
      }
    });
  </script>
</body>

</html>