<style>
    /* Posicionamiento y estilos */
    #languageselector {
        position: fixed;
        top: 10px;
        left: 10px;
        display: flex;
        gap: 10px;
        z-index: 1000;
    }

    .language {
        cursor: pointer;
        font-size: 32px;
    }

    .selected {
        border: 2px solid blue;
        border-radius: 4px;
        padding: 2px;
    }
</style>
<div id="languageselector">
    <span class="language" id="lang-es" data-lang="es">
